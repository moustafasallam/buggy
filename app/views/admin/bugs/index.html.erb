  <div class="row">
    <form class="col s12" action="/" method="get">

      <div class="row">
        <div class="input-field col s9">
          <input placeholder="search" name="query" type="text" class="validate" value="<%= params[:query] %>">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s3">
          <input type="submit" value="search!" class="btn">
        </div>
      </div>

    </form>
  </div>


  <table>
    <thead>
      <tr>
        <th>Token</th>
        <th>device</th>
        <th>State</th>
        <th>Priority</th>
        <th>comment</th>
      </tr>
    </thead>
    <tbody>

		<% @bugs.each do |b| %>
      <tr>
        <td><%= b.registered_app.token %></td>
        <td><%= b.device.name %> / <%= b.device.os %></td>
        <td><%= b.state %></td>
        <td><%= b.priority %></td>
        <td><%= b.comment %></td>
      </tr>
		<% end %>

      </tbody>
  </table>
